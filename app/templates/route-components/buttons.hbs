					<li>List item 4</li>
					<li>List item 5</li>
					<li>List item 6</li>
					<li>List item 7</li>
					<li>List item 8</li>
					<li>List item 9</li>
					<li>List item 10</li>
				</ul>
			{{/dropdown.content}}
		{{/wds-dropdown}}

		{{#wds-dropdown as |dropdown|}}
			{{#dropdown.toggle tagName='button' class='wds-button'}}
				{{wds-icon name='fandom-heart' size='small'}}
				<span>Dropdown</span>
			{{/dropdown.toggle}}
			{{#dropdown.content}}
				<ul class="wds-list">
